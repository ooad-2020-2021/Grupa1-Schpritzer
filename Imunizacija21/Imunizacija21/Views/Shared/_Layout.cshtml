<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Imunizacija21</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Imunizacija21</a> -->
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="logo" title="logo" height="54px" width="250px" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Vakcinacija</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trenutno stanje</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home">Mapa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FAQ">FAQ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            <a href="https://github.com/mborovac1"><img title="Muhamed Borovac" src="~/images/github-icon.png" alt="logo" title="logo" height="48px" width="48px" /></a>
            <a href="https://github.com/ecivgin1"><img title="Eldar Čivgin" src="~/images/github-icon.png" alt="logo" title="logo" height="48px" width="48px" /></a>
            <a href="https://github.com/dnuhic"><img title="Dženan Nuhić" src="~/images/github-icon.png" alt="logo" title="logo" height="48px" width="48px" /></a>
            <a href="https://github.com/bpasic1"><img title="Benjamin Pašić" src="~/images/github-icon.png" alt="logo" title="logo" height="48px" width="48px" /></a> <br />
            Imunizacija '21 - made by SchpritzerMedia 2021, All rights reserved <br />
            Copyright 2021-2021 SchpritzerMedia d.o.o. Sarajevo
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
